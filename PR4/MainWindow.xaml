<Window x:Class="PR4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="163*"></ColumnDefinition>
            <ColumnDefinition Width="35*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button x:Name="authBtn" Content="Войти" Grid.Column="1" Height="50" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top" Click="authBtn_Click"></Button>
        <Button x:Name="exitBtn" Content="Выход" Grid.Column="1" Height="50" Width="100" HorizontalAlignment="Center" VerticalAlignment="Bottom"></Button>



        <Frame x:Name="MainFrame1"  Grid.Column="0" Navigated="MainFrame1_Navigated"/>
        <Frame x:Name="MainFrame"  Grid.Column="0" Navigated="MainFrame_Navigated"/>

    </Grid>
</Window>
